<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/material_dynamic_neutral90">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Главная"
                android:textSize="32sp"
                android:textColor="#212121"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <androidx.cardview.widget.CardView
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                app:cardBackgroundColor="@color/white"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/humo_perevod_text1"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="16dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Отправляйте денежные \n переводы зарубеж"
                                android:textColor="#212121"
                                android:gravity="center"/>
                            <ImageView
                                android:id="@+id/humo_perevod_image1"
                                android:layout_below="@id/humo_perevod_text1"
                                android:layout_centerHorizontal="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/humo_perevod_1"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/humo_perevod_botton1"
                                android:layout_width="match_parent"
                                app:cornerRadius="32dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#DD6018"
                                android:layout_below="@id/humo_perevod_image1"
                                android:layout_marginHorizontal="19dp"
                                android:text="Отправить перевод"
                                android:textSize="16sp"
                                />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="12dp">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            app:cardBackgroundColor="@color/white"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                >
                            <ImageView
                                android:id="@+id/humo_perevod_image2"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/humo_1"/>
                            <TextView
                                android:id="@+id/humo_perevod_text2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/humo_perevod_image2"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:text="Доступно обновление"
                                android:textStyle="normal"
                                android:textSize="16sp"
                                android:textColor="#171717"
                                android:fontFamily="sans-serif-medium"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/humo_perevod_image2"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:textColor="#737373"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:text="Получите новые возможности для денежных переводов!"
                                android:layout_below="@id/humo_perevod_text2"/>
                             </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            app:cardBackgroundColor="@color/white"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:paddingBottom="12dp"
                                    android:id="@+id/humo_perevod_text3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentStart="true"
                                    android:text="Популярные страны"
                                    android:textStyle="normal"
                                    android:textSize="20sp"
                                    android:textColor="#212121"
                                    android:fontFamily="sans-serif-medium"/>
                                    <HorizontalScrollView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:scrollbars="none"
                                        android:paddingEnd="8dp">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            >
                                            <com.google.android.material.card.MaterialCardView
                                                android:layout_width="116dp"
                                                app:cardBackgroundColor="@color/white"
                                                android:layout_height="108dp"
                                                app:cardCornerRadius="16dp"
                                                app:cardElevation="0dp"
                                                android:layout_marginEnd="8dp"
                                                app:strokeColor="#F5F5F5"
                                                app:strokeWidth="1.2dp"
                                                >
                                                <RelativeLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:padding="12dp">
                                                    <ImageView
                                                        android:id="@+id/humo_perevod_image3"
                                                        android:layout_alignParentStart="true"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:src="@drawable/humo_2"/>
                                                    <TextView
                                                        android:layout_marginTop="28dp"
                                                        android:layout_below="@id/humo_perevod_image3"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="Таджикистан"
                                                        android:textStyle="normal"
                                                        android:textSize="14sp"
                                                        android:fontFamily="sans-serif-medium"
                                                        android:textColor="#212121"
                                                        />
                                                </RelativeLayout>
                                            </com.google.android.material.card.MaterialCardView>
                                            <com.google.android.material.card.MaterialCardView
                                                android:layout_width="116dp"
                                                app:cardBackgroundColor="@color/white"
                                                android:layout_height="108dp"
                                                app:cardCornerRadius="16dp"
                                                app:cardElevation="0dp"
                                                android:layout_marginEnd="8dp"
                                                app:strokeColor="#F5F5F5"
                                                app:strokeWidth="1.2dp"
                                                >
                                                <RelativeLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:padding="12dp">
                                                    <ImageView
                                                        android:id="@+id/humo_perevod_image4"
                                                        android:layout_alignParentStart="true"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:src="@drawable/humo_3"/>
                                                    <TextView
                                                        android:layout_marginTop="28dp"
                                                        android:layout_below="@id/humo_perevod_image4"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="Россия"
                                                        android:textStyle="normal"
                                                        android:textSize="14sp"
                                                        android:fontFamily="sans-serif-medium"
                                                        android:textColor="#212121"
                                                        />
                                                </RelativeLayout>
                                            </com.google.android.material.card.MaterialCardView>
                                            <com.google.android.material.card.MaterialCardView
                                                android:layout_width="116dp"
                                                app:cardBackgroundColor="@color/white"
                                                android:layout_height="108dp"
                                                app:cardCornerRadius="16dp"
                                                app:cardElevation="0dp"
                                                app:strokeColor="#F5F5F5"
                                                app:strokeWidth="1.2dp"
                                                >
                                                <RelativeLayout
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:padding="12dp">
                                                    <ImageView
                                                        android:id="@+id/humo_perevod_image5"
                                                        android:layout_alignParentStart="true"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:src="@drawable/humo_4"/>
                                                    <TextView
                                                        android:layout_marginTop="28dp"
                                                        android:layout_below="@id/humo_perevod_image5"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="Узбекистан"
                                                        android:textStyle="normal"
                                                        android:textSize="14sp"
                                                        android:fontFamily="sans-serif-medium"
                                                        android:textColor="#212121"
                                                        />
                                                </RelativeLayout>
                                            </com.google.android.material.card.MaterialCardView>
                                        </LinearLayout>

                                    </HorizontalScrollView>
                                </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.core.widget.NestedScrollView>