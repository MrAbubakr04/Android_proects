<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="#F6F5FB"
    >

    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="130dp"
        android:paddingHorizontal="10dp"
        >
        <ImageView
            android:layout_marginStart="114dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector1"
            app:tint="#3D3270"
            android:layout_alignParentTop="true"
            />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:layout_marginStart="10dp"
            android:id="@+id/user1"
            android:layout_marginBottom="10dp"
            android:src="@drawable/user1"/>
        <TextView
            android:layout_below="@id/user1"
            android:id="@+id/text_11"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Astro- psychological\n report"
            android:textSize="12dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#403572"
            />
        <TextView
            android:layout_below="@id/text_11"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASome short description\n of this type of report."
            android:textSize="10dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#403572"
            />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>